<Window x:Class="SearchRobot.Simulation.Simulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulation" Height="600" Width="1000" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200px" />
        </Grid.ColumnDefinitions>

        <Canvas Grid.Row="0" Grid.Column="0" Name="MapArea" Background="Azure" />

        <Grid Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="150px" />
                <RowDefinition />
                <RowDefinition Height="50px" />
                <RowDefinition Height="50px" />
            </Grid.RowDefinitions>

            <Canvas Grid.Row="0" Grid.Column="0" Name="MapExploredArea" Background="Cyan" />
            <Button Name="btnStart" Content="Start" Grid.Row="2" Grid.Column="0" Click="OnBtnStartClick" />
            <Button Name="btnReset" Content="Reset" Grid.Row="3" Grid.Column="0" Click="OnBtnResetClick"/>
        </Grid>
    </Grid>
</Window>
